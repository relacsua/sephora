<h1>Category</h1>
<%= link_to 'Add category', new_category_path %>
<table>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Show', category_path(category) %></td>
			<td><%= link_to 'Edit', edit_category_path(category) %></td>
			<td><%= link_to 'Delete', category_path(category),
			method: :delete,
			data: { confirm: 'Are you sure you want to delete?' } %></td>
		</tr>
	<% end %>
</table>