<p><%= @category.id %></p>
<p><%= @category.name %></p>
<p><%= @category.created_at %></p>
<p><%= @category.updated_at %></p>

<h3>Sub Category</h3>

<%= link_to "Add Sub Category for #{@category.name}", new_category_sub_category_path(@category) %>

<table>
	<% @category.sub_categories.each do |sub_category| %>
		<tr>
			<td><%= sub_category.name %></td>
			<td><%= link_to 'Show', category_sub_category_path(@category, sub_category) %></td>
			<td><%= link_to 'Edit', edit_category_sub_category_path(@category, sub_category)%></td>
			<td><%= link_to 'Delete', category_sub_category_path(@category, sub_category), 
				method: :delete, 
				data: { confirm: 'Are you sure you want to delete?' }%></td>
		</tr>
	<% end %>
</table>

