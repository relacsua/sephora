<%= form_for([@category, @sub_category, @sub_sub_category]) do |f| %>
	<% if @sub_sub_category.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@sub_sub_category.errors.count, "error") %> prohibited
				this article from being saved:
			</h2>
			<ul>
				<% @sub_sub_category.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit class: "btn btn-primary" %>
	</div>
<% end %>

<%= link_to 'Back', category_sub_category_path(@category, @sub_category), class: "btn btn-default" %>